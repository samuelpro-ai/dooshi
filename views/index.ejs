<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DOOSHI â€” Luxury Fashion</title>

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Montserrat:wght@300;400;500;600&display=swap"
        rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        :root {
            --gold: #ffd700;
            --dark: #0a0a0a;
            --light: #f8f9fa;
            --gray: #666;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: var(--dark);
            color: #fff;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* === HEADER === */
        header {
            position: fixed;
            top: 0;
            width: 100%;
            padding: 20px 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(12px);
            z-index: 1000;
            transition: 0.3s;
            border-bottom: 1px solid rgba(255, 215, 0, 0.1);
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--gold);
            text-decoration: none;
            letter-spacing: 1px;
        }

        .nav {
            display: flex;
            gap: 30px;
        }

        .nav a {
            color: #fff;
            text-decoration: none;
            font-weight: 500;
            font-size: 1rem;
            transition: 0.3s;
            position: relative;
        }

        .nav a:hover {
            color: var(--gold);
        }

        .nav a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -6px;
            left: 0;
            background: var(--gold);
            transition: 0.3s;
        }

        .nav a:hover::after {
            width: 100%;
        }

        /* === HERO SECTION === */
        .hero {
            height: 100vh;
            background: linear-gradient(rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0.75)),
                url('https://images.unsplash.com/photo-1445205170230-053b83016050?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') center/cover no-repeat;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 0 20px;
        }

        .hero h1 {
            font-family: 'Playfair Display', serif;
            font-size: 4.5rem;
            margin-bottom: 16px;
            color: var(--gold);
            text-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

        .hero p {
            font-size: 1.3rem;
            max-width: 700px;
            margin-bottom: 30px;
            color: #ddd;
        }

        .btn {
            padding: 14px 40px;
            background: var(--gold);
            color: var(--dark);
            font-weight: 600;
            text-decoration: none;
            border-radius: 50px;
            font-size: 1.1rem;
            transition: 0.3s;
            box-shadow: 0 6px 20px rgba(255, 215, 0, 0.3);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(255, 215, 0, 0.4);
        }

        /* === COLLECTION GRID === */
        .collection {
            padding: 100px 5%;
            background: #111;
        }

        .section-title {
            text-align: center;
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            margin-bottom: 60px;
            color: var(--gold);
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .card {
            background: #1a1a1a;
            border-radius: 16px;
            overflow: hidden;
            transition: 0.4s;
            position: relative;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        .card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 40px rgba(255, 215, 0, 0.2);
        }

        .card img {
            width: 100%;
            height: 320px;
            object-fit: cover;
            transition: 0.4s;
        }

        .card:hover img {
            transform: scale(1.05);
        }

        .info {
            padding: 20px;
            text-align: center;
        }

        .info h3 {
            font-size: 1.4rem;
            margin-bottom: 8px;
            color: #fff;
        }

        .info .price {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--gold);
        }

        .info .old-price {
            text-decoration: line-through;
            color: #888;
            font-size: 1rem;
            margin-left: 8px;
        }

        /* === EMPTY STATE === */
        .empty {
            text-align: center;
            padding: 80px 20px;
            color: #aaa;
            font-size: 1.3rem;
        }

        .empty a {
            color: var(--gold);
            text-decoration: none;
            font-weight: 600;
        }

        .empty a:hover {
            text-decoration: underline;
        }

        /* === FOOTER === */
        footer {
            background: #000;
            padding: 40px 5%;
            text-align: center;
            font-size: 0.9rem;
            color: #666;
            border-top: 1px solid #222;
        }

        footer a {
            color: var(--gold);
            text-decoration: none;
        }

        /* === RESPONSIVE === */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 3rem;
            }

            .hero p {
                font-size: 1.1rem;
            }

            .nav {
                display: none;
            }

            .grid {
                grid-template-columns: 1fr;
            }

            .section-title {
                font-size: 2.2rem;
            }
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <header>
        <a href="/" class="logo">DOOSHI</a>
        <div class="nav">
            <a href="/">Home</a>
            <a href="/#collection">Collection</a>
            <a href="/admin">Admin</a>
        </div>
    </header>

    <!-- HERO -->
    <section class="hero">
        <h1>Elegance Redefined</h1>
        <p>Discover timeless luxury crafted with passion and precision.</p>
        <a href="#collection" class="btn">Explore Collection</a>
    </section>

    <!-- COLLECTION -->
    <section class="collection" id="collection">
        <h2 class="section-title">Our Collection</h2>

        <% if (clothes.length===0) { %>
            <p class="empty">No items yet. <a href="/admin">Add to your collection!</a></p>
            <% } else { %>
                <div class="grid">
                    <% clothes.forEach(item=> { %>
                        <div class="card">
                            <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                            <div class="info">
                                <h3>
                                    <%= item.title %>
                                </h3>
                                <p class="price">â‚¦<%= item.price.toFixed(2) %>
                                </p>
                                <span>ðŸ“ž 090-141-429-167</span>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </section>

    <!-- FOOTER -->
    <footer>
        <p>&copy; 2025 DOOSHI Fashion. All rights reserved. | 090-141-429-167</p>
    </footer>

</body>

</html>